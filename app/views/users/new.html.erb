<% provide :title, t("title.signup") %>
<h1><%= t("title.signup") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("user.new.label_name")%>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("user.new.label_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("user.new.label_pw") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("user.new.label_pw2") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("user.new.signup_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
